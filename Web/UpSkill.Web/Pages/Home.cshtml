@page
@model UpSkill.Web.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
}

<style>
    .h1Headlines {
        top: 234px;
        left: 150px;
        width: 760px;
        height: 256px;
        text-align: left;
        font: normal normal bold 70px/85px Montserrat;
        letter-spacing: 0px;
        color: #000000;
        opacity: 1;
    }

    .layputDesign {
        top: 0px;
        left: 0px;
        width: 1800px;
        height: 100px;
        background: #FFFFFF 0% 0% no-repeat padding-box;
        box-shadow: 0px 3px 6px #00000029;
        opacity: 1;
    }

    .layoutButtonsPosition {
        position: fixed;
        top: 55px;
        left: 1345px;
        opacity: 1;
    }

    .spanButtons {
        text-align: left;
        font: normal normal bold 22px/27px Montserrat;
        letter-spacing: 1.1px;
        color: #FFFFFF;
        opacity: 1;
        background: #296CFB 0% 0% no-repeat padding-box;
        opacity: 1;
    }

    .description {
        top: 540px;
        left: 150px;
        width: 760px;
        height: 202px;
        text-align: left;
        font: normal normal medium 22px/42px Montserrat;
        letter-spacing: 0px;
        color: #000000;
        opacity: 1;
    }
    footer {
        overflow: hidden;
        position: relative;
        color: #fff;
        z-index: 1;
    }

        footer .content-wrapper {
            background: transparent;
            padding: 20px 0;
        }

            footer .content-wrapper form button {
                width: 100%;
            }

        footer .slants {
            padding: 4% 0;
        }

            footer .slants:before {
                content: '';
                height: 100%;
                background: #0B2969;
                transform: skewY(7deg);
                transform-origin: left top;
                position: absolute;
                width: 100%;
                top: 0;
                z-index: -1;
            }

    .contentFooter {
        padding-bottom: 2rem;
    }

    .getStarted {
        color: #0B2969 !important;
    }

    #CopyRigthFooter {
        border-top: 2px solid white;
    }

    .footer-copyRLogo {
        font-size: 1.3rem;
    }

    @@media screen and (max-width:768px) {
        .footer-getStartedWrapper {
            display: flex;
            justify-content: center;
        }

        .getStarted {
            justify-self: center;
        }

        .footer-content {
            padding: 0 2rem;
        }

        .footer-serviceList,
        .footer-companyList {
            width: fit-content;
        }

        .footer-socials-item {
            width: fit-content;
            padding: 0 1rem;
        }

            .footer-socials-item::before {
                font-weight: bolder;
            }

        .fab {
            font-size: 2rem;
        }

        .footer-socials,
        .footer-socials-list {
            display: flex !important;
            flex-direction: row !important;
            justify-content: center;
        }
    }
</style>

<header class="layputDesign">
    <nav class="layoutButtonsPosition">
        <button class="spanButtons">Login</button>
        <button class="spanButtons">Request a Demo</button>
    </nav>
</header>

<div class="container">
    <h1 class="h1Headlines">
        Do you want to level
        up the knowledge of your team?
    </h1>
    <p class="description">
        Upskill gives everyone the opportunity to grow professionally and develop into a specialist in every field.
        We inspire your people to master their skills and become the best version of themselves.
        Through our unique, personalised, user-friendly experience, your business is ready to reach new heights.
    </p>
</div>

<footer>
    <div className="slants">
    </div>
    <div className="content-wrapper container-fluid">
        <div className="content container contentFooter">
            <div className="row justify-content-between">
                <div className="col-md-4 footer-content">
                    <h2><img src={FooterLOGO} alt="Footer Logo" className="w-25" /> upskill</h2>
                    <p className="pr-5 pt-3 pb-3">Upskill gives everyone the opportunity to grow professionally and develop into specialist in every field.</p>
                    <div className="footer-getStartedWrapper">
                        <NavLink to=""
                                 className="btn btn-outline-light rounded-0 getStarted font-weight-bold pl-3 pr-3 pb-2 pt-2 fw-bolder">
                            Get Started
                        </NavLink>
                    </div>
                </div>
                <div className="col-md-3 mt-5 ml-auto footer-companyList">
                    <ul className="nav flex-column">
                        <h5 className="nav-brand px-3 m-1">Company</h5>
                        <li className="nav-item m-1"><NavLink to="" className="nav-link text-white">About us</NavLink></li>
                        <li className="nav-item m-1"><NavLink to="" className="nav-link text-white">Contact us</NavLink></li>
                        <li className="nav-item m-1"><NavLink to="" className="nav-link text-white">Privacy Policy</NavLink></li>
                    </ul>
                </div>
                <div className="col-md-3 mt-5 footer-serviceList">
                    <ul className="nav flex-column">
                        <h5 className="nav-brand px-3 m-1">Services</h5>
                        <li className="nav-item m-1"><NavLink to="" className="nav-link text-white">Courses</NavLink></li>
                        <li className="nav-item m-1"><NavLink to="" className="nav-link text-white">Coaches</NavLink></li>
                        <li className="nav-item m-1"><NavLink to="" className="nav-link text-white">Requests</NavLink></li>
                    </ul>
                </div>
                <div className="col-md-1 mt-5 footer-socials">
                    <ul className="nav flex-column mt-4 footer-socials-list">
                        <li className="nav-item m-1 footer-socials-item"><NavLink to="" className="nav-link text-white p-0"><i className="fab fa-facebook-square h3"></i></NavLink></li>
                        <li className="nav-item m-1 footer-socials-item"><NavLink to="" className="nav-link text-white p-0"><i className="fab fa-instagram h3"></i></NavLink></li>
                        <li className="nav-item m-1 footer-socials-item"><NavLink to="" className="nav-link text-white p-0"><i className="fab fa-linkedin h3"></i></NavLink></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="CopyRigthFooter" className="mt-4 border-top-2 border-white content-wrapper container-fluid">
        <div className="content container">
            <div className="row d-flex justify-content-center">
                <span className="col-md-4 text-center footer-copyRLogo">&copy; UpSkill {(new Date().getFullYear())}</span>
            </div>
        </div>
    </div>
</footer>
